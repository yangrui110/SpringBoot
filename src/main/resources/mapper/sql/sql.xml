<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.web.core.crud.dao.sql.SqlAjaxCrudDao">
    <!--最小的行数是1-->
    <select id="findAll" resultType="java.util.Map">
        SELECT
        *
        FROM
        ( SELECT ${condition.columns}, ROW_NUMBER () OVER ( ORDER BY ${condition.orderBy}) AS RowNumber FROM ${condition.mainTable} ${condition.mainAlias}
        ${condition.joins}
        <trim prefix="where">
            <foreach item="value" index="index" collection="condition.cons" separator=" and " >
                <if test="value.right !='' and value.right != null">
                    ${value.left} ${value.operator} #{value.right}
                </if>
            </foreach>
        </trim>
        ) s
        WHERE
        RowNumber &gt; #{condition.start}
        AND RowNumber &lt;= #{condition.end}
    </select>

    <insert id="insert">
        insert into [${entityName}]
        <foreach item="value" index="key" collection="data" separator=" , " open="(" close=")">
            ${key}
        </foreach>
        values
        <foreach item="value" index="key" collection="data" separator=" , " open="(" close=")">
            #{value}
        </foreach>
    </insert>

    <update id="update">
        update [${entityName}]
        set
        <foreach collection="data" separator="," item="value" index="key">
            #{key} = #{value}
        </foreach>
        where
        <foreach collection="whereCondition" separator=" and " item="value" index="index">
            #{value.left} ${value.operator} #{value.right}
        </foreach>
    </update>

    <delete id="delete">
        delete from [${entityName}]
        where
        <foreach collection="whereCondition" separator=" and " item="value" index="index">
            [${value.left}] ${value.operator} #{value.right}
        </foreach>
    </delete>
</mapper>